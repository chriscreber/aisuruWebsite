<% include ../../partials/header %>

<div class="container">
    <div class="row">

        <h1 style="text-align: center;">Edit Menu Item</h1>
        <div style="width: 30%; margin: 25px auto">
        
            <form action="<%= baseUrl %>/<%= menuItem._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="menuItem[name]" value="<%= menuItem.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="menuItem[image]" value="<%= menuItem.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="menuItem[description]" value="<%= menuItem.description %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="menuItem[price]" placeholder="Price" value="<%= menuItem.price[0] %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="menuItem[price]" placeholder="Small Price" value="<%= menuItem.price[1] %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="menuItem[price]" placeholder="Large Price" value="<%= menuItem.price[2] %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="menuItem[price]" placeholder="Masago Price" value="<%= menuItem.price[3] %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="menuItem[price]" placeholder="Quail Egg Price" value="<%= menuItem.price[4] %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="menuItem[price]" placeholder="Oyster Price" value="<%= menuItem.price[5] %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="menuItem[price]" placeholder="Uni Price" value="<%= menuItem.price[6] %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-primary btn-block">Submit!</button>
                </div>
            </form>
        
            <a href="<%= baseUrl %>/<%= menuItem._id %>">Go Back</a>
        
        </div>
        
    </div>
</div>

<% include ../../partials/footer %>