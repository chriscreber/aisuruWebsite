<% include ../../../partials/header %>

<div class="container">
    <div class="row">

        <h1 style="text-align: center;">New Menu Item</h1>
        <div style="width: 30%; margin: 25px auto">
        
            <form action="<%= baseUrl %>" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="menuItem[name]" placeholder="Name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="menuItem[image]" placeholder="Image URL">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="menuItem[description]" placeholder="Description">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="menuItem[price]" placeholder="Price">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="menuItem[genre]" value="1" style="display: none;">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-primary btn-block">Submit!</button>
                </div>
            </form>
        
            <a href="<%= baseUrl %>">Go Back</a>
        
        </div>
        
    </div>
</div>

<% include ../../../partials/footer %>