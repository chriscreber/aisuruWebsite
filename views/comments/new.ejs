<% include ../partials/header %>

<div class="container">
    <a role="button" class="btn btn-info" href="<%= baseUrl %>/<%= menuItem._id %>"><i class="fas fa-arrow-circle-left"></i> Go Back</a>

    <h1 style="text-align: center;">New Comment to <%= menuItem.name %></h1>
    <div class="row">

        
        <div class="col-md-3"></div>
        <div class="col-md-6">
        
            <form action="<%= baseUrl %>/<%= menuItem._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-primary btn-block">Submit!</button>
                </div>
            </form>
        

        </div>
        <div class="col-md-3"></div>
        
    </div>
</div>

<% include ../partials/footer %>