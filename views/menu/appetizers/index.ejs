                                <input class="form-control" type="text" name="menuItem[name]" value="<%= side.name %>" style="display: none;">
                                <input class="form-control" type="text" name="menuItem[image]" value="<%= side.image %>" style="display: none;">
                                <input class="form-control" type="text" name="menuItem[url]" value="appetizers/side/<%= side._id %>" style="display: none;">
                                <button class="btn btn-warning btn-sm">Favorite</button>
                        </form>
                    </div>
                
                </div>
            </div>
        <% }); %>
    
    </div>
    
    <hr>
    
    <a id="jump_to_salads" class="anchor"></a>
    
    <h1 class="text-center">Salads</h1>
    
    <% if(currentUser && currentUser.username === "admin"){ %>
        <div>
            <a href="/index/menu/appetizers/salad/new" class="btn btn-primary">New</a>
        </div>
    <% } %>
    <hr>
    
    <div class="row text-center">
        
        <% salads.forEach(function(salad){ %>
            <div class="col-md-3 col-sm-6">
