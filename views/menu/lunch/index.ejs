<% include ../../partials/header %>

<div class="container">
    
    <div>
        <a role="button" class="btn btn-info" href="/index/menu"><i class="fas fa-arrow-circle-left"></i> Go Back</a>
        <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle jump-to" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Jump To:
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" href="#jump_to_top">Top</a>
                <a class="dropdown-item" href="#jump_to_box">Bento Boxes</a>
            </div>
        </div>
    </div>
    
    <a id="jump_to_top" class="anchor"></a>
    
    <h1 class="text-center">Lunch</h1>

    <% if(currentUser && currentUser.username === "admin"){ %>
        <div>
            <a href="/index/menu/lunch/new/generic" class="btn btn-primary">New</a>
        </div>
    <% } %>
    <hr>
    
<!--move style later-->
    <div class="row text-center">
        
        
        <% lunches.forEach(function(lunch){ %>
            <% if(lunch.genre === 0){ %>
                <div class="col-md-3 col-sm-6">
                    <div class="card">
                        <img class="card-img-top" src="<%= lunch.image %>">
                        
                        <div class="card-body">
                            <h5 class="card-title"><%= lunch.name %></h5>
                            <hr>
                            <a href="/index/menu/lunch/<%= lunch._id %>" class="btn btn-primary btn-sm" id="more-info-btn">More Info</a>
                            <form action="/myFavorites/<%= lunch._id %>?_method=PUT" method="POST">
                                    <input class="form-control" type="text" name="menuItem[name]" value="<%= lunch.name %>" style="display: none;">
                                    <input class="form-control" type="text" name="menuItem[image]" value="<%= lunch.image %>" style="display: none;">
                                    <input class="form-control" type="text" name="menuItem[url]" value="lunch/<%= lunch._id %>" style="display: none;">
                                    <button class="btn btn-warning btn-sm">Favorite</button>
                            </form>
                        </div>
                        
                    </div>
                </div>
            <% } %>
        <% }); %>
        
    </div>
    
    <a id="jump_to_box" class="anchor"></a>
    
    <h1 class="text-center">Bento Boxes</h1>
    <p class="text-center">Add 4 pieces of california roll for $1.50</p>

    <% if(currentUser && currentUser.username === "admin"){ %>
        <div>
            <a href="/index/menu/lunch/new/boxes" class="btn btn-primary">New</a>
        </div>
    <% } %>
    <hr>
    
<!--move style later-->
    <div class="row text-center">
        
        
        <% lunches.forEach(function(lunch){ %>
            <% if(lunch.genre === 1){ %>
                <div class="col-md-3 col-sm-6">
                    <div class="card">
                        <img class="card-img-top" src="<%= lunch.image %>">
                        
                        <div class="card-body">
                            <h5 class="card-title"><%= lunch.name %></h5>
                            <hr>
                            <a href="/index/menu/lunch/<%= lunch._id %>" class="btn btn-primary btn-sm" id="more-info-btn">More Info</a>
                            <form action="/myFavorites/<%= lunch._id %>?_method=PUT" method="POST">
                                    <input class="form-control" type="text" name="menuItem[name]" value="<%= lunch.name %>" style="display: none;">
                                    <input class="form-control" type="text" name="menuItem[image]" value="<%= lunch.image %>" style="display: none;">
                                    <input class="form-control" type="text" name="menuItem[url]" value="lunch/<%= lunch._id %>" style="display: none;">
                                    <button class="btn btn-warning btn-sm">Favorite</button>
                            </form>
                        </div>
                        
                    </div>
                </div>
            <% } %>
        <% }); %>
        
    </div>

</div>

<% include ../../partials/footer %> 