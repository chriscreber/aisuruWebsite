<% include ../../partials/header %>

<div class="container">
    <div>
        <a role="button" class="btn btn-info" href="/index/menu"><i class="fas fa-arrow-circle-left"></i> Go Back</a>
    </div>
    
    <div class="col-md-9 col-sm-9">
        <h1 class="text-center">Poke Bowl</h1>
        <hr>
    </div>
    
    <div class="row">
        
        
        <div class="col-lg-3 col-md-9 col-sm-9">
            <div class="card">
                
                <div class="card-body size">
                    <h5 class="card-title">Size</h5>
                    <hr class="hr-thick">
                    <% poke.size.forEach(function(size){ %>
                        <div class="clicked-item-size">
                            <p class="card-text float-left p-no-margin"><i class="fas fa-check-square d-none"> </i><span id="name"><%= size.name %></span>...</p>
                            <p class="card-text text-right p-no-margin">$<span id="price"><%= size.price %></span></p>
                        </div>
                        <hr class="hr-no-margin">
                    <% }); %>
                    
                </div>
            
            </div>
        </div>
        
        <div class="col-lg-3 col-md-9 col-sm-9">
            <div class="card">
                
                <div class="card-body base">
                    <h5 class="card-title">Base</h5>
                    <p class="card-text p-no-margin">Select 1</p>
                    <p class="card-text p-no-margin">Additional Base + $2</p>
                    <hr class="hr-thick">
                    <% poke.base.forEach(function(base){ %>
                        <div class="clicked-item-base">
                            <p class="card-text float-left p-no-margin"><i class="fas fa-check-square d-none"> </i><span id="name"><%= base.name %></span>...</p>
                            <p class="card-text text-right p-no-margin">$<span id="price"><%= base.price %></span></p>
                        </div>
                        <hr class="hr-no-margin">
                    <% }); %>
                    
                </div>
            
            </div>
        </div>
        
        <div class="col-lg-3 col-md-9 col-sm-9">
            <div class="card">
                
                <div class="card-body meat">
                    <h5 class="card-title">Meat</h5>
                    <p class="card-text p-no-margin">Regular: Select 2</p>
                    <p class="card-text p-no-margin">Large: Select 3</p>
                    <hr class="hr-thick">
                    <% poke.meat.forEach(function(meat){ %>
                        <div class="clicked-item-meat">
                            <p class="card-text float-left p-no-margin"><i class="fas fa-check-square d-none"> </i><span id="name"><%= meat.name %></span>...</p>
                            <p class="card-text text-right p-no-margin">$<span id="price"><%= meat.price %></span></p>
                        </div>
                        <hr class="hr-no-margin">
                    <% }); %>
                    
                </div>
            
            </div>
        </div>
        
        <div class="col-lg-3 col-md-9 col-sm-9"></div>
        
        <div class="col-lg-3 col-md-9 col-sm-9">
            <div class="card">
                
                <div class="card-body toppings">
                    <h5 class="card-title">Toppings</h5>
                    <p class="card-text p-no-margin">Select 3</p>
                    <p class="card-text p-no-margin">Additional Toppings + $2</p>
                    <hr class="hr-thick">
                    <% poke.toppings.forEach(function(topping){ %>
                        <div class="clicked-item-toppings">
                            <p class="card-text float-left p-no-margin"><i class="fas fa-check-square d-none"> </i><span id="name"><%= topping.name %></span>...</p>
                            <p class="card-text text-right p-no-margin">$<span id="price"><%= topping.price %></span></p>
                        </div>
                        <hr class="hr-no-margin">
                    <% }); %>
                    
                </div>
            
            </div>
        </div>
        
        <div class="col-lg-3 col-md-9 col-sm-9">
            <div class="card">
                
                <div class="card-body sauce">
                    <h5 class="card-title">Sauce</h5>
                    <p class="card-text p-no-margin">Select 1</p>
                    <p class="card-text p-no-margin">Additional Sauce + $2</p>
                    <hr class="hr-thick">
                    <% poke.sauce.forEach(function(sauce){ %>
                        <div class="clicked-item-sauce">
                            <p class="card-text p-no-margin"><i class="fas fa-check-square d-none"> </i><span id="name"><%= sauce %></span></p>
                        </div>
                        <hr class="hr-no-margin">
                    <% }); %>
                    
                </div>
            
            </div>
        </div>
        
        <div class="poke-card poke-card-fix col-md-3 col-sm-3">

                <div class="card">
                    
                    <div class="card-body create">
                        <h5 class="card-title">Poke Bowl</h5>
                        <form action="/myFavoritePoke?_method=PUT" method="POST">
                                <div class="form-section-size">
                                    
                                </div>
                                <div class="form-section-base">
                                    
                                </div>
                                <div class="form-section-meat">
                                    
                                </div>
                                <div class="form-section-toppings">
                                    
                                </div>
                                <div class="form-section-sauce">
                                    
                                </div>
                                <div class="form-section-price">
                                    
                                </div>
                                <button class="btn btn-warning btn-sm">Favorite</button>
                        </form>
                        <hr class="hr-thick">
                        <p class="card-text p-no-margin">Selected Size:</p>
                        <div class="create-section-size">
                            
                            
                        </div>
                        <hr>
                        <p class="card-text p-no-margin">Selected Base:</p>
                        <div class="create-section-base">
                            
                            
                        </div>
                        <hr>
                        <p class="card-text p-no-margin">Selected Meat:</p>
                        <div class="create-section-meat">
                            
                            
                        </div>
                        <hr>
                        <p class="card-text p-no-margin">Selected Toppings:</p>
                        <div class="create-section-toppings">
                            
                            
                        </div>
                        <hr>
                        <p class="card-text p-no-margin">Selected Sauce:</p>
                        <div class="create-section-sauce">
                            
                            
                        </div>
                        <hr>
                        <p class="card-text">Total Price: <span id="total-price"></span></p>
                    </div>
                
                </div>
                
        </div>
        
        
        
    </div>
</div>

<script type="text/javascript" src="/javascript/poke.js"></script>
        
        
<% include ../../partials/footer %>