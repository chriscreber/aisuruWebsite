<% include ../../partials/header %>

<div class="container">
    
    <div>
        <a role="button" class="btn btn-info" href="/index/menu"><i class="fas fa-arrow-circle-left"></i> Go Back</a>
        <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle jump-to" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Jump To:
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" href="#jump_to_sushi">Sushi</a>
                <a class="dropdown-item" href="#jump_to_sushiSets">Sushi Sets</a>
            </div>
        </div>
    </div>
    
    <a id="jump_to_sushi" class="anchor"></a>
    
    <h1 class="text-center">Sushi</h1>

    <% if(currentUser && currentUser.username === "admin"){ %>
        <div>
            <a href="/index/menu/sushi/new/sushi" class="btn btn-primary">New</a>
        </div>
    <% } %>
    <hr>
    
<!--move style later-->
    <div class="row text-center">
        
        
        <% menuItems.forEach(function(menuItem){ %>
            <% if(menuItem.genre === 0){ %>
                <div class="col-md-3 col-sm-6">
                    <div class="card">
                        <img class="card-img-top" src="<%= menuItem.image %>">
                        
                        <div class="card-body">
                            <h5 class="card-title"><%= menuItem.name %></h5>
                            <hr>
                            <a href="/index/menu/sushi/<%= menuItem._id %>" class="btn btn-primary btn-sm" id="more-info-btn">More Info</a>
                            <form action="/myFavorites/<%= menuItem._id %>?_method=PUT" method="POST">
                                    <input class="form-control" type="text" name="menuItem[name]" value="<%= menuItem.name %>" style="display: none;">
                                    <input class="form-control" type="text" name="menuItem[image]" value="<%= menuItem.image %>" style="display: none;">
                                    <input class="form-control" type="text" name="menuItem[url]" value="sushi/<%= menuItem._id %>" style="display: none;">
                                    <button class="btn btn-warning btn-sm">Favorite</button>
                            </form>
                        </div>
                        
                        
                    </div>
                    
                </div>
            <% } %>
        <% }); %>
        
    </div>
    
    <a id="jump_to_sushiSets" class="anchor"></a>
    
    <h1 class="text-center">Sushi Sets</h1>
    <p class="text-center">Includes miso and sunomono</p>

    <% if(currentUser && currentUser.username === "admin"){ %>
        <div>
            <a href="/index/menu/sushi/new/sushiSet" class="btn btn-primary">New</a>
        </div>
    <% } %>
    <hr>
    
<!--move style later-->
    <div class="row text-center">
        
        
        <% menuItems.forEach(function(menuItem){ %>
            <% if(menuItem.genre === 1){ %>
                <div class="col-md-3 col-sm-6">
                    <div class="card">
                        <img class="card-img-top" src="<%= menuItem.image %>">
                        
                        <div class="card-body">
                            <h5 class="card-title"><%= menuItem.name %></h5>
                            <hr>
                            <a href="/index/menu/sushi/<%= menuItem._id %>" class="btn btn-primary btn-sm" id="more-info-btn">More Info</a>
                            <form action="/myFavorites/<%= menuItem._id %>?_method=PUT" method="POST">
                                    <input class="form-control" type="text" name="menuItem[name]" value="<%= menuItem.name %>" style="display: none;">
                                    <input class="form-control" type="text" name="menuItem[image]" value="<%= menuItem.image %>" style="display: none;">
                                    <input class="form-control" type="text" name="menuItem[url]" value="sushi/<%= menuItem._id %>" style="display: none;">
                                    <button class="btn btn-warning btn-sm">Favorite</button>
                            </form>
                        </div>
                        
                        
                    </div>
                    
                </div>
            <% } %>
        <% }); %>
        
    </div>

</div>

<% include ../../partials/footer %> 