<% include ../../partials/header %>

<div class="container">
    
<!--move style later-->
    <div>
        <a role="button" class="btn btn-info" href="/index/menu"><i class="fas fa-arrow-circle-left"></i> Go Back</a>
        <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle jump-to" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Jump To:
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" href="#jump_to_specialty_rolls">Specialty Rolls</a>
                <a class="dropdown-item" href="#jump_to_half_rolls">Half Price Rolls</a>
            </div>
        </div>
    </div>
    
    <a id="jump_to_specialty_rolls" class="anchor"></a>

    <h1 class="text-center">Specialty Rolls</h1>
    
    <% if(currentUser && currentUser.username === "admin"){ %>
        <div>
            <a href="/index/menu/sushiRolls/specialtyRoll/new" class="btn btn-primary">New</a>
        </div>
    <% } %>
    <hr>
    
    <div class="row text-center">
        
        <% specialtyRolls.forEach(function(specialtyRoll){ %>
            <div class="col-md-3 col-sm-6">
                <div class="card">
                    <img class="card-img-top" src="<%= specialtyRoll.image %>">
                    
                    <div class="card-body">
                        <h5 class="card-title"><%= specialtyRoll.name %></h5>
                        <hr>
                        <a href="/index/menu/sushiRolls/specialtyRoll/<%= specialtyRoll._id %>" class="btn btn-primary btn-sm" id="more-info-btn">More Info</a>
                        <form action="/myFavorites/<%= specialtyRoll._id %>?_method=PUT" method="POST">
                                <input class="form-control" type="text" name="menuItem[name]" value="<%= specialtyRoll.name %>" style="display: none;">
                                <input class="form-control" type="text" name="menuItem[image]" value="<%= specialtyRoll.image %>" style="display: none;">
                                <input class="form-control" type="text" name="menuItem[url]" value="sushiRolls/specialtyRoll/<%= specialtyRoll._id %>" style="display: none;">
                                <button class="btn btn-warning btn-sm">Favorite</button>
                        </form>
                    </div>
                    
                </div>

            </div>
        <% }); %>
        
    </div>
    
    <hr>
    
    <a id="jump_to_half_rolls" class="anchor"></a>

    <h1 class="text-center">Half Price Rolls</h1>
    
    <% if(currentUser && currentUser.username === "admin"){ %>
        <div>
            <a href="/index/menu/sushiRolls/halfRoll/new" class="btn btn-primary">New</a>
        </div>
    <% } %>
    <hr>
    
    <div class="row text-center">
        
        <% halfRolls.forEach(function(halfRoll){ %>
            <div class="col-md-3 col-sm-6">
                <div class="card">
                    <img class="card-img-top" src="<%= halfRoll.image %>">
                    
                    <div class="card-body">
                        <h5 class="card-title"><%= halfRoll.name %></h5>
                        <hr>
                        <a href="/index/menu/sushiRolls/halfRoll/<%= halfRoll._id %>" class="btn btn-primary btn-sm" id="more-info-btn">More Info</a>
                        <form action="/myFavorites/<%= halfRoll._id %>?_method=PUT" method="POST">
                                <input class="form-control" type="text" name="menuItem[name]" value="<%= halfRoll.name %>" style="display: none;">
                                <input class="form-control" type="text" name="menuItem[image]" value="<%= halfRoll.image %>" style="display: none;">
                                <input class="form-control" type="text" name="menuItem[url]" value="sushiRolls/halfRoll/<%= halfRoll._id %>" style="display: none;">
                                <button class="btn btn-warning btn-sm">Favorite</button>
                        </form>
                    </div>
                
                </div>
            </div>
        <% }); %>
    
    </div>

</div>

<% include ../../partials/footer %> 