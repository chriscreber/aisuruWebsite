<% include ../partials/header %>

<div class="container">
    
    <div>
        <a role="button" class="btn btn-info" href="/index"><i class="fas fa-arrow-circle-left"></i> Go Back</a>
    </div>
    
    <h1 class="text-center">Specials</h1>

    <% if(currentUser && currentUser.username === "admin"){ %>
        <div>
            <a href="/index/specials/new" class="btn btn-primary">New</a>
        </div>
    <% } %>
    <hr>
    
<!--move style later-->
    <div class="row text-center">
        
        
        <% specialItems.forEach(function(specialItem){ %>
            <div class="col-md-3 col-sm-6">
                <div class="card">
                    <img class="card-img-top" src="<%= specialItem.image %>">
                    
                    <div class="card-body">
                        <h5 class="card-title"><%= specialItem.name %></h5>
                        <hr>
                        <a href="/index/specials/<%= specialItem._id %>" class="btn btn-primary btn-sm" id="more-info-btn">More Info</a>
                        <form action="/myFavorites/<%= specialItem._id %>?_method=PUT" method="POST">
                                <input class="form-control" type="text" name="menuItem[name]" value="<%= specialItem.name %>" style="display: none;">
                                <input class="form-control" type="text" name="menuItem[image]" value="<%= specialItem.image %>" style="display: none;">
                                <input class="form-control" type="text" name="menuItem[url]" value="lunch/<%= specialItem._id %>" style="display: none;">
                                <button class="btn btn-warning btn-sm">Favorite</button>
                        </form>
                    </div>
                    
                </div>
            </div>
        <% }); %>
        
    </div>

</div>

<% include ../partials/footer %> 